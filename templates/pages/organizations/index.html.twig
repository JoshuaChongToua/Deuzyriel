{% extends "themes/base_homepage.html.twig" %}

{% block title %}Page des Utilisateurs{% endblock %}

{% block description %}Page de tous les utilisateurs{% endblock %}

{% block JQuery %}
    {# Jquery #}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
{% endblock %}

{% block dataTables %}
    {# Datatable #}
    <link href="https://cdn.datatables.net/v/bs5/dt-1.13.6/datatables.min.css" rel="stylesheet">
    <script src="https://cdn.datatables.net/v/bs5/dt-1.13.6/datatables.min.js"></script>


    <script>
        $(document).ready( function () {
            $('#myTable').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/fr-FR.json',
                },
            });
        } );
    </script>
{% endblock %}

{% block main %}

    <div>
        <a href="{{path('organization.create')}}" class="btn btn-secondary">Créer une nouvelle organisation</a>
    </div>
    <div class="table-responsive my-5">
        <table id="myTable" class="table table-striped table-hover table-bordered">
            <thead class="table-light">
            <tr>
                <th>Id</th>
                <th>Nom de l'organisation</th>
                <th>Admin</th>
                <th>Siret</th>
                <th>Adresse</th>
                <th>Zip</th>
                <th>Country</th>
                <th>Tel</th>
                <th>Type</th>
                <th>Créé le : </th>
                <th>Modifié le :</th>
                <th>Option</th>
            </tr>
            </thead>
            <tbody>
            {% for organization in listOrganizations %}
                <tr>
                    <td>{{organization.id}}</td>
                    <td>{{organization.organizationName}}</td>
                    <td>{{organization.isAdmin}}</td>
                    <td>{{organization.siret}}</td>
                    <td>{{organization.address}}</td>
                    <td>{{organization.zip}}</td>
                    <td>{{organization.country}}</td>
                    <td>{{organization.tel}}</td>
                    <td>{{organization.type}}</td>
                    <td>{{organization.createdAt|date('d-m-Y')}}</td>
                    <td>{{organization.updatedAt|date('d-m-Y')}}</td>
                    <td></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

