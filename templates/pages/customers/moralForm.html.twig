            <div class="col-md-8 col-lg-7">
                <div class="my-2">

                    {{form_start(moralForm)}}
                    <div class="mb-3">
                        <label for="physical_form_firstName">Nom Companie</label>
                        <div class="text-danger">{{ form_errors(moralForm.companyName) }}</div>
                        {{form_widget(moralForm.companyName, {'attr':{'class':'form-control'}})}}
                    </div>
                    <div class="mb-3">
                        <label for="physical_form_lastName">Type Company</label>
                        <div class="text-danger">{{ form_errors(moralForm.companyType) }}</div>
                        {{form_widget(moralForm.companyType, {'attr':{'class':'form-control'}})}}
                    </div>
                    <div class="mb-3">
                        <label for="physical_form_dateBirthday">Siret</label>
                        <div class="text-danger">{{ form_errors(moralForm.siret) }}</div>
                        {{form_widget(moralForm.siret)}}
                    </div>
                    <div class="mb-3">
                        <label for="physical_form_gender">Nom Contact</label>
                        <div class="text-danger">{{ form_errors(moralForm.contactName) }}</div>
                        {{form_widget(moralForm.contactName, {'attr':{'class':'form-control'}})}}
                    </div>
                    <div class="mb-3">
                        <label for="physical_form_gender">Prenom Contact</label>
                        <div class="text-danger">{{ form_errors(moralForm.contactFirstName) }}</div>
                        {{form_widget(moralForm.contactFirstName, {'attr':{'class':'form-control'}})}}
                    </div>



                    <div class="my-3">
                        <input formnovalidate type="submit" class="btn btn-success w-25 shadow" value="Valider">
