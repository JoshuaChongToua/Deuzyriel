            <div class="col-md-8 col-lg-7">
                <div class="my-2">

                    {{form_start(customerForm)}}
                    <div class="mb-3">
                        <label for="physical_form_customerType">Type de customer</label>
                        <div class="text-danger">{{ form_errors(customerForm.customerType) }}</div>
                        {{form_widget(customerForm.customerType, {'attr':{'class':'form-control'}})}}
                    </div>
                    <div class="mb-3">
                        <label for="physical_form_organization">Organisation</label>
                        <div class="text-danger">{{ form_errors(customerForm.organization) }}</div>
                        {{form_widget(customerForm.organization, {'attr':{'class':'form-control'}})}}
                    </div>
                    <div class="mb-3">
                        <label for="physical_form_email">Email</label>
                        <div class="text-danger">{{ form_errors(customerForm.email) }}</div>
                        {{form_widget(customerForm.email, {'attr':{'class':'form-control'}})}}
                    </div>
                    <div class="mb-3">
                        <label for="physical_form_address">Adresse</label>
                        <div class="text-danger">{{ form_errors(customerForm.address) }}</div>
                        {{form_widget(customerForm.address, {'attr':{'class':'form-control'}})}}
                    </div>
                    <div class="mb-3">
                        <label for="physical_form_zip">Zip</label>
                        <div class="text-danger">{{ form_errors(customerForm.zip) }}</div>
                        {{form_widget(customerForm.zip, {'attr':{'class':'form-control'}})}}
                    </div>
                    <div class="mb-3">
                        <label for="physical_form_city">Ville</label>
                        <div class="text-danger">{{ form_errors(customerForm.city) }}</div>
                        {{form_widget(customerForm.city, {'attr':{'class':'form-control'}})}}
                    </div>
                    <div class="mb-3">
                        <label for="physical_form_country">Pays</label>
                        <div class="text-danger">{{ form_errors(customerForm.country) }}</div>
                        {{form_widget(customerForm.country, {'attr':{'class':'form-control'}})}}
                    </div>
                    <div class="mb-3">
                        <label for="physical_form_tel">Tel</label>
                        <div class="text-danger">{{ form_errors(customerForm.tel) }}</div>
                        {{form_widget(customerForm.tel, {'attr':{'class':'form-control'}})}}
                    </div>
                    <div class="mb-3">
                        <label for="physical_form_isNPAI">isNPAI</label>
                        <div class="text-danger">{{ form_errors(customerForm.isNPAI) }}</div>
                        {{form_widget(customerForm.isNPAI, {'attr':{'class':'form-control'}})}}
