{% extends "themes/base_homepage.html.twig" %}

{% block title %} Créer un nouvel utilisateur {% endblock %}

{% block description %} Création d'un nouvel utilisateur {% endblock %}

{% block main %}

    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <h1 class="text-center my-5" data-aos="fade-up-right">Nouvel utilisateur</h1>

    {% for message in app.flashes('warning') %}
        <div class="text-center alert alert-warning alert-dismissible fade show" role="alert">
            {{message}}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}

    {% for message in app.flashes('success') %}
        <div class="text-center alert alert-warning alert-dismissible fade show" role="alert">
            {{message}}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-md-6">
                {{form_start(form)}}
                <div class="mb-3">
                    <label for="user_form_firstName">Prénom</label>
                    <div class="text-danger">{{ form_errors(form.firstName) }}</div>
                    {{form_widget(form.firstName, {'attr':{'class':'form-control'}})}}
                </div>
                <div class="mb-3">
                    <label for="user_form_lastName">Nom</label>
                    <div class="text-danger">{{ form_errors(form.lastName) }}</div>
                    {{form_widget(form.lastName, {'attr':{'class':'form-control'}})}}
                </div>
                <div class="mb-3">
                    <label for="user_form_email">Email</label>
                    <div class="text-danger">{{ form_errors(form.email) }}</div>
                    {{form_widget(form.email, {'attr':{'class':'form-control'}})}}
                </div>
                <div class="mb-3">
                    <label for="user_form_password_first">Mot de passe</label>
                    <div class="text-danger">{{ form_errors(form.password) }}</div>
                    {{form_widget(form.password, {'attr':{'class':'form-control'}})}}
                </div>
                <div class="mb-3">
                    <input formnovalidate type="submit" class="btn btn-primary w-100 shadow">
                </div>
                {{form_end(form)}}
            </div>
        </div>
    </div>

{% endblock %}
